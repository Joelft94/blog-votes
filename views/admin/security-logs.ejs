<div class="security-logs">
    <h2>Security Logs</h2>
  
    <section class="failed-logins">
      <h3>Failed Login Attempts</h3>
      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th>Attempts</th>
            <th>Last Attempt</th>
          </tr>
        </thead>
        <tbody>
          <% failedLogins.forEach(log => { %>
            <tr>
              <td><%= log.email %></td>
              <td><%= log.attempts %></td>
              <td><%= log.lastAttempt %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </section>
  
    <% if (activityLogs.length > 0) { %>
      <section class="activity-logs">
        <h3>User Activity Logs</h3>
        <table>
          <thead>
            <tr>
              <th>User</th>
              <th>Action</th>
              <th>Timestamp</th>
            </tr>
          </thead>
          <tbody>
            <% activityLogs.forEach(log => { %>
              <tr>
                <td><%= log.user_email %></td>
                <td><%= log.action %></td>
                <td><%= new Date(log.created_at).toLocaleString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </section>
    <% } %>
  </div>
  
  <style>
  .security-logs {
    padding: 20px;
  }
  
  section {
    margin-bottom: 30px;
  }
  
  h3 {
    margin-bottom: 15px;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }
  
  th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }
  
  th {
    background-color: #f5f5f5;
  }
  
  tr:hover {
    background-color: #f9f9f9;
  }
  </style>